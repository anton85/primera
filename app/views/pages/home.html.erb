<table>
  <tr>
    <th>Title</th>
    <th>Code</th>
    <th>Description</th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= link_to h(issue.title), issue %></td>
    <td><%=h issue.code %></td>
    <td><%=h issue.description %></td>
  </tr>
<% end %>
</table>

